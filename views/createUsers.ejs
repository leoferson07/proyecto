                <label for="rol">Rol</label>
                <select id="rol" name="rol" required>
                    <option value="usuario">Usuario</option>
                    
                    <option value="presidente">Presidente</option>
                </select>
            </div>
            <button type="submit" class="btn">Agregar</button>
        </form>
    </div>
</body>
</html>